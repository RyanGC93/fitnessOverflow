extends layout.pug

include utils.pug

block content

  +validationErrorSummary(errors)
  form(action='/questions/ask' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Title', 'title', question.title)
    +field('Body', 'body', question.body)
    div
      button(type='submit') Post Question
      a(href='/') Cancel
