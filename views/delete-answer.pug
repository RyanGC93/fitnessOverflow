extends layout.pug

block content
    if (userId === answer.authorId)
        div
            p Are you sure you want to delete this answer?
        div
            form(action=`/questions/${questionId}/answer/${answer.id}/delete` method='post')
                input(type='hidden' name='_csrf' value=csrfToken)
                button(type='submit') Delete Answer
                a(href='/' role='button') Cancel
    else
        p You are not authorized to delete this answer
