extends layout.pug

include utils.pug

block content
 if (userId === question.authorId)
  +validationErrorSummary(errors)
  form(action=`/questions/${question.id}/edit` method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Title', 'title', question.title)
    div
     label(for="body") Question
     textarea(id="body" name="body")= question.body
    div
      button(type='submit') Edit Question
      a(href=`/questions/${question.id}`) Cancel
 else
   p you are not authorized to edit this question
