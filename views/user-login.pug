extends layout.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/login.css")
  //- add page specific js
  script(src="/javascripts/demo-login.js" type="module" defer)

include utils.pug

block content
 .container
  h1(class="title") Login
  +validationErrorSummary(errors)
  form(class="auth-form" action='/users/login' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Email', 'email', email )
    +field('Password', 'password', null, 'password')
    div
      button(class="btn" type='submit' ) Login
      a(href='/') Cancel
    P: a(href='/users/signup' class="linked") Don't have an account?
