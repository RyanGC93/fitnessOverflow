//- extends layout.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/login.css")
  //- add page specific js
  script(src="/javascripts/demo-login.js" type="module" defer)

include utils.pug

block content
  .container
    form(class="auth-form" action='/users/login' method='post')
      +validationErrorSummary(errors)
      image(class="logo" src="/pictures/logoTransparent.png")
        div(class="title") Fitness Overflow
      input(type='hidden' name='_csrf' value=csrfToken)
      div(class='emailLogin--row')
        img(src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/217233/user_icon_copy.png')
        input(type="text" id="email" name="email" placeholder="Email")
      div(class="password--row")
        img(src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/217233/lock_icon_copy.png')
        input(type="password" id="password" name="password" placeholder="Password")
      div(class='login-btn')
        button(class="btn" type='submit' ) Login
      div(class="account--row")
        P: a(href='/users/signup' class="linked") Don't have an account?
