extends layout.pug

include utils.pug

block content
    if (userId === question.authorId)
        h3= question.title
        div
            p Are you sure you want to delete this question?
        div
            form(action=`/questions/${question.id}/delete` method='post')
                input(type='hidden' name='_csrf' value=csrfToken)
                button(type='submit') Delete Question
                a(href='/' role='button') Cancel
    else    
        p You are not authorized to delete this question