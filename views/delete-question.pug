extends layout.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/forms.css")

block content
    .container-delete
        div(class='error_and_form')
            if (userId === question.authorId)
              form(action=`/questions/${question.id}/delete` method='post' class="forms")
                input(type='hidden' name='_csrf' value=csrfToken)
                div(class="form-group")
                    h3(class="alert-text") Question to delete: #{question.title}
                    p(class="alert-text") Are you sure you want to delete this question?
                div(class='buttons')
                    a(href='/' role='button') Cancel
                    button(type='submit' class="btn") Delete Question
            else
                p You are not authorized to delete this question
