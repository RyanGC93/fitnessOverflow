extends layout.pug
append head
  link(rel="stylesheet" href="/stylesheets/login.css")
  link(rel="stylesheet" href="/stylesheets/reset.css")
  //- add page specific js
include utils.pug

block content
 .container
  h1(class="title") Signup
  +validationErrorSummary(errors)
  form(class="auth-form" action='/users/signup' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Username', 'username', user.username)
    +field('Email', 'email', user.email)
    +field('Password', 'password', user.password, 'password')
    +field('Confirm Password', 'confirmPassword', '', 'password')
    div
      button(class="btn" type='submit') Signup
      a(href='/') Cancel
    div
     p: a(href='/users/login' class="linked") Already have an account?
